generator client {
  provider        = "prisma-client-js"
  output          = "../node_modules/.prisma/client"
  previewFeatures = ["multiSchema", "postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  directUrl  = env("DIRECT_URL")
  extensions = [uuid_ossp(map: "uuid-ossp", schema: "extensions")]
  schemas    = ["auth", "public"]
}

model User {
  id                 String          @id @default(uuid()) @db.Uuid
  email              String          @unique
  name               String?
  createdAt          DateTime        @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt          DateTime        @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)
  cards              Card[]
  edges              Edge[]
  profiles           Profile?
  projectMemberships ProjectMember[]
  ownedProjects      Project[]       @relation("ProjectOwner")
  settings           Settings?
  tags               Tag[]
  users              users           @relation(fields: [id], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@map("users")
  @@schema("public")
}

model Profile {
  id        String   @id @default(uuid()) @db.Uuid
  username  String?  @unique
  fullName  String?  @map("full_name")
  avatarUrl String?  @map("avatar_url")
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)
  users     User     @relation(fields: [id], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@map("profiles")
  @@schema("public")
}

model Project {
  id        String          @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name      String
  ownerId   String          @map("owner_id") @db.Uuid
  settings  Json?           @default("{}")
  createdAt DateTime        @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt DateTime        @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)
  cards     Card[]
  edges     Edge[]
  members   ProjectMember[]
  owner     User            @relation("ProjectOwner", fields: [ownerId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  tags      Tag[]
  cardNodes CardNode[]

  @@map("projects")
  @@schema("public")
}

model ProjectMember {
  projectId String   @map("project_id") @db.Uuid
  userId    String   @map("user_id") @db.Uuid
  role      String   @default("member")
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@id([projectId, userId])
  @@map("project_members")
  @@schema("public")
}

model Card {
  id        String     @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  projectId String     @map("project_id") @db.Uuid
  userId    String?    @map("user_id") @db.Uuid
  title     String
  content   String?
  createdAt DateTime   @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt DateTime   @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)
  cardTags  CardTag[]
  project   Project    @relation(fields: [projectId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  user      User?      @relation(fields: [userId], references: [id], onUpdate: NoAction)
  cardNodes CardNode[]

  @@map("cards")
  @@schema("public")
}

model CardNode {
  id        String @id @default(uuid()) @db.Uuid
  positionX Float  @map("position_x")
  positionY Float  @map("position_y")

  card      Card    @relation(fields: [cardId], references: [id], onDelete: Cascade)
  cardId    String  @map("card_id") @db.Uuid
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId String  @map("project_id") @db.Uuid

  styleJson Json? @map("style_json") @db.JsonB
  dataJson  Json? @map("data_json") @db.JsonB

  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)

  sourceEdges Edge[] @relation("EdgeSource")
  targetEdges Edge[] @relation("EdgeTarget")

  @@map("card_nodes") // 테이블 이름 snake_case 로 명시
  @@schema("public")
}

model Tag {
  id        String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  projectId String    @map("project_id") @db.Uuid
  userId    String?   @map("user_id") @db.Uuid
  name      String
  createdAt DateTime  @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt DateTime  @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)
  cardTags  CardTag[]
  project   Project   @relation(fields: [projectId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  user      User?     @relation(fields: [userId], references: [id], onUpdate: NoAction)

  @@unique([projectId, name])
  @@map("tags")
  @@schema("public")
}

model Edge {
  id               String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  projectId        String   @map("project_id") @db.Uuid
  userId           String?  @map("user_id") @db.Uuid
  sourceCardNodeId String   @map("source_node_id") @db.Uuid
  targetCardNodeId String   @map("target_node_id") @db.Uuid
  sourceHandle     String?  @map("source_handle")
  targetHandle     String?  @map("target_handle")
  type             String?
  animated         Boolean? @default(false)
  style            Json?    @db.JsonB // Json 타입에 @db.JsonB 명시 권장
  data             Json?    @db.JsonB // Json 타입에 @db.JsonB 명시 권장
  createdAt        DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt        DateTime @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)
  project          Project  @relation(fields: [projectId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  sourceNode       CardNode @relation("EdgeSource", fields: [sourceCardNodeId], references: [id], onDelete: Cascade) // CardNode 참조
  targetNode       CardNode @relation("EdgeTarget", fields: [targetCardNodeId], references: [id], onDelete: Cascade) // CardNode 참조
  user             User?    @relation(fields: [userId], references: [id], onUpdate: NoAction)

  @@unique([projectId, sourceCardNodeId, targetCardNodeId], map: "edges_project_source_node_target_node_unique")
  @@index([userId, projectId], map: "idx_edges_user_project")
  @@map("edges")
  @@schema("public")
}

model CardTag {
  cardId    String   @map("card_id") @db.Uuid
  tagId     String   @map("tag_id") @db.Uuid
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  card      Card     @relation(fields: [cardId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  tag       Tag      @relation(fields: [tagId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@id([cardId, tagId])
  @@map("card_tags")
  @@schema("public")
}

model Settings {
  id        String   @id @default(uuid()) @db.Uuid
  userId    String   @unique @map("user_id") @db.Uuid
  data      Json     @default("{}") @map("data") @db.JsonB
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at") // @updatedAt은 자동 업데이트 처리
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("settings")
  @@schema("public")
}

